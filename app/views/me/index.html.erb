<div class='me'>
<h2>プロフィール</h2>
 <% if @user.image.attached? %>
            <%= image_tag @user.image, class:'me_image'%>
        <% end %>

<table class='table'>
    <tr>
        <th>ユーザー ID</th>
        <td><%= current_user.id %></td>
    </tr>
    <tr>
        <th>名前</th>
        <td><%=@user.name%></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= current_user.email%></td>
    </tr>
</table>
<div class='btn'>
    <%=link_to("プロフィール編集","/me/edit",class:'edit')%>
</div>
</div>
