<body>
    <div class="container center">
        <div class='row'>
            <div class='col s12'>
                <h2>編集</h2>
            </div>
        </div>
                <!---card-->
                <div class="card blue lighten-3">
                    <div class="card-content white-text">
                        <% if user_signed_in? %>
                        <div class='row left'>
                            <div class='col s3 '>
                            <% if @user.image.attached? %>
                                <%= image_tag @user.image, class: "me_image" %>
                            <% else %>
                                <%= image_tag '/defalt_img.png',class: 'defalt_img'%>
                            <%end%>
                            </div>
                        </div>
                        <% end %>
                        <div class='row'>
                            <div class='col s6 push-s2'>
                                <%= form_tag("/comments/#{@comment.id}",method:"post") do%>
                                <textarea name="content" class='comment-edit_content white'><%= @comment.content%></textarea>
                            </div>

                        </div>
                    </div>
                </div>

                <button class="btn waves-effect waves-light" type="submit" name="action">編集完了！
                    <i class="material-icons right">send</i>
                </button>
                <!--bottun-->


        <% end %>
    </div>
</body>
