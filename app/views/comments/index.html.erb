<!-- materialize grid-->
<body>
    <div class='container'>
        <div class='row center'>
            <div class='col s12'>
                <h2>みんなのツイート</h2>
            </div>
        </div>

        <!--card panel-->
        <div class="row center">
            <% @comment.each do |comment|%>
            <div class="col s12 m12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">ユーザー名表示</span>
                        <div class='row'>
                            <div class='col s12 m12'>
                                <%= link_to(comment.content,"/comments/#{comment.id}",class: "link")%>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col s12'>
                                <% if comment.image.attached? %>
                                    <%= image_tag comment.image, style: "width: 20rem;"%>
                                <% end %>
                            </div>
                        </div>

                        <div class='row right'>
                            <div class='col s12'>
                                    <%= comment.created_at.strftime("%Y年%m月%d日%H時%M分")%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

    </div>
</body>
