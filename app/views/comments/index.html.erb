<!-- materialize grid-->
<body>
    <div class='container'>
        <div class='row center'>
            <div class='col s12'>
                <h2>みんなのなう</h2>
            </div>
        </div>

        <!--card panel-->
        <div class="row center">
            <% @comment.each do |comment|%>
            <div class="col s12 m12">
                <div class="card blue lighten-3">
                    <div class="card-content white-text">
                    <% if user_signed_in? %>
                        <div class='row left'>
                            <div class='col s12 m12'>
                            <!--プロフ画像-->
                            <% if comment.user.image.attached? %>
                                <%= link_to image_tag(comment.user.image, class: "me_image"), "/comments/#{comment.id}" %>
                            <% else %>
                                <%= image_tag '/defalt_img.png',class: 'defalt_img'%>
                            <%end%>
                            <%= comment.user.name%>
                            </div>
                        </div>
                    <% end %>

                        <div class='row'>
                            <div class='col s12 m12 '>
                                <% if user_signed_in? %>
                                    <%= link_to(comment.content,"/comments/#{comment.id}",class: "link")%>
                                <% else %>
                                <%= link_to(comment.content,new_user_session_path, class: "link")%>
                                <% end %>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col s12'>
                                <% if comment.image.attached? %>
                                    <%= image_tag comment.image, style: "width: 20rem;"%>
                                <% end %>
                            </div>
                        </div>

                        <div class='row right'>
                            <div class='col s12'>
                                    <%= comment.created_at.strftime("%Y年%m月%d日%H時%M分")%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

    </div>
</body>
