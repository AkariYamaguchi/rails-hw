<!-- materialize grid-->
<body>
<div class='wrap'>
<div class='wrap_fil'>
      <div class="container">
        <!-- Page Content goes here -->
        <div class='row'>
          <div class='col s12'>
            <h2 class="title">今の気持ちをつぶやこう！</h2>
          </div>
        </div>

        <div class='row'>
          <div class='col s3'></div>
          <div class='col s6'>
            <%= form_with model: @comment, local: true  do |form| %>
              <%= form.text_area :content,class:"new_text" %><br>
          </div>
          <div class='col s3'></div>
        </div>
        <div class='row'>
              <%= form.file_field :image ,class:"new_image"%><br>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">つぶやく
          <i class="material-icons right">send</i>
        </button>
      <% end %>
      </div>
    </div>
  </div>
</body>
